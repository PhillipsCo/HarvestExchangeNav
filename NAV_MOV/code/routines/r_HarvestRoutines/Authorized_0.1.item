		masterdataPoolUpdate=null;
		movilizerRequest = createMovilizerRequestObject();
		requestBuilder = createMovilizerRequestBuilderObject();
		masterdataPoolUpdate= createMovilizerMasterdataPoolUpdateObject();
		return responseXML;
		
	}
